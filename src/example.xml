<sentence>
    <either>
        <this id="they">They</this>
        <or id="i">I</or>
        <or class="singular_third" id="he">He</or>
        <or class="singular_third" id="she">She</or>
    </either>
    <unless condition="start">also</unless>
    <maybe>really</maybe>
    <spaceless>
        <either id="affection">
            <this>like</this>
            <or>love</or>
        </either>
        <if condition=".singular_third">s</if>
    </spaceless>
    <data key="subject"></data>.
    <text>
        <if condition="#i">My</if>
        <if condition="#they">Their</if>
        <if condition="#he">His</if>
        <if condition="#she">Her</if>
    </text>
    <spaceless>
        <select key="pet">
            <for value="canine">dog</for>
            <for value="feline">cat</for>
            <default>pet</default>
        </select>
        <maybe id="pet_plural">s</maybe>
    </spaceless>
    <spaceless>
        <ref id="affection"></ref>
        <unless condition="#pet_plural">s</unless>
    </spaceless>
    <if condition="person">
        <then>
            <select key="gender">
                <for value="M">him</for>
                <for value="F">her</for>
                <default>that person</default>
            </select>
        </then>
        <else>
            <if condition="subject_plural">
                <then>
                    <either>
                        <this>those</this>
                        <or>them</or>
                    </either>
                </then>
                <else>
                    <either>
                        <this>it</this>
                        <or>this</or>
                        <or>that</or>
                    </either>
                </else>
            </if>
        </else>
    </if>
    just as much.
</sentence>